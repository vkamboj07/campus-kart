    // Handle "Manage My Account" click - check if logged in
    document.getElementById("manage-account-link")?.addEventListener("click", function(e) {
        const userId = localStorage.getItem("userId");
        if (!userId) {
            e.preventDefault();
            alert("Please login first to manage your account!");
            window.location.href = "/login";
        }
        // If logged in, allow navigation to account.html (edit profile section)
    });

    // Handle logout
    document.getElementById("logout-link")?.addEventListener("click", function(e) {
